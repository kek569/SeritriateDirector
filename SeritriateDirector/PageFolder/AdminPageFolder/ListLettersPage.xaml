            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label x:Name="SearchLb"
               Content="Поиск"
               Style="{StaticResource LabelNormal}"
               Grid.Column="1"/>
        <TextBox x:Name="SearchTb"
                 Grid.Column="2"
                 TextChanged="SearchTb_TextChanged"/>

        <Label x:Name="TypeLeettersLb"
               Content="Тип письма"
               Style="{StaticResource LabelNormal}"
               Grid.Column="4"/>
